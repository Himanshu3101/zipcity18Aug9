<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name                  :"
                android:textColor="#3e3e3e"
                android:editable="false"
               android:textStyle="bold"
                android:textSize="14sp"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:id="@+id/vendor_name"
                android:editable="false"
                android:layout_height="wrap_content"
                android:text="Kalpana Yadav"
                android:layout_marginLeft="10dp"
                android:textColor="#3e3e3e"
                android:typeface="serif"
                android:textSize="13dp"/>
        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Number :"
                android:textColor="#3e3e3e"
                android:editable="false"
                android:textStyle="bold"
                android:textSize="13dp"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/vendor_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9999999999"
                android:editable="false"
                android:layout_marginLeft="10dp"
                android:textColor="#3e3e3e"
                android:typeface="serif"
                android:textSize="13dp"/>
        </android.support.v7.widget.LinearLayoutCompat>


        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verif Type             :"
                android:editable="false"
                android:textColor="#3e3e3e"
                android:textStyle="bold"
                android:textSize="13dp"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/verification_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aadhar Card"
                android:editable="false"
                android:layout_marginLeft="10dp"
                android:textColor="#3e3e3e"
                android:typeface="serif"
                android:textSize="13dp"/>

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verif No                 :"
                android:editable="false"
                android:textColor="#3e3e3e"
                android:textStyle="bold"
                android:textSize="13dp"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/verification_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="214536987458"
                android:editable="false"
                android:layout_marginLeft="10dp"
                android:textColor="#3e3e3e"
                android:typeface="serif"
                android:textSize="13dp"/>

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/from_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="21July2018"
                android:editable="false"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:textColor="#3e3e3e"
                android:typeface="serif"
                android:textSize="13dp"
                android:layout_weight=".1"/>

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="To"
                android:editable="false"
                android:textColor="#3e3e3e"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="13dp"
                android:layout_weight=".1"/>


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/to_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="21July2018"
                android:editable="false"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:textColor="#3e3e3e"
                android:typeface="serif"
                android:textSize="13dp"
                android:layout_weight=".1"/>

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:paddingBottom="20dp">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/service_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Service Type"
                android:editable="false"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:textColor="#3e3e3e"
                android:typeface="serif"
                android:textSize="13dp"
                android:layout_weight=".1"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/Approval_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Type"
                android:editable="false"
                android:textColor="#3e3e3e"
                android:textAlignment="center"
                android:typeface="serif"
                android:textSize="13dp"
                android:layout_weight=".1"/>


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/Approval_typevalue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type Value"
                android:editable="false"
                android:layout_marginRight="10dp"
                android:textAlignment="center"
                android:textColor="#3e3e3e"
                android:typeface="serif"
                android:textSize="13dp"
                android:layout_weight=".1"/>

        </android.support.v7.widget.LinearLayoutCompat>

        <View
            android:layout_height="2.5dp"
            android:layout_width="match_parent"
            android:background="#096a75" />

    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.LinearLayoutCompat>