<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#096a75 ">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/gatekeeper_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="05dp"
            android:layout_marginTop="07dp"
            android:background="@drawable/back" />

        <android.support.v7.widget.AppCompatTextView

            android:text="Profile"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#fff"
            android:paddingRight="50dp"
            android:layout_marginTop="13dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="15dp">

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/gate_changepassword"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="04dp"
                android:background="@drawable/change_password_icon"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <android.support.v7.widget.LinearLayoutCompat
                android:id="@+id/linearlayt1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_margin="02dp"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/usr_logo"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@drawable/img_bck"
                        android:layout_gravity="center"
                        android:src="@drawable/user_icon"/>

                    <android.support.v7.widget.AppCompatImageButton
                        android:id="@+id/chngepic"
                        android:layout_marginTop="-70dp"
                        android:layout_marginLeft="65dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@color/transparent"
                        android:layout_gravity="center"
                        android:src="@drawable/cam"/>

                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:typeface="serif"
                    android:textColor="#096a75"
                    android:textSize="14sp"
                    android:editable="false"
                    android:text="Name" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/gatekeeper_name"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textColorHint="#757575"
                     android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:textColor="#3e3e3e"
                    android:editable="false"
                    android:textSize="14sp"
                    android:typeface="serif"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:background="@drawable/spinner_border_color" />


                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:typeface="serif"
                    android:textColor="#096a75"
                    android:textSize="14sp"
                    android:editable="false"
                    android:text="Role" />

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/gatekeeper_role"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textColorHint="#757575"
                     android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:editable="false"
                    android:textColor="#3e3e3e"
                    android:textSize="14sp"
                    android:typeface="serif"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:background="@drawable/spinner_border_color" />

                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:typeface="serif"
                    android:textColor="#096a75"
                    android:textSize="14sp"
                    android:editable="false"
                    android:text="Contact Number"/>

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/gatekeeper_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textColorHint="#757575"
                    android:editable="false"
                     android:inputType="phone"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:textColor="#3e3e3e"
                    android:textSize="14sp"
                    android:typeface="serif"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:maxLength="12"
                    android:background="@drawable/spinner_border_color" />


            </android.support.v7.widget.LinearLayoutCompat>

        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="gone">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/gatekeeper_submit"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="#096a75"
                android:textAlignment="center"
                android:text="Submit"
                android:typeface="serif"
                android:textSize="15sp"
                android:textColor="#fff"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.LinearLayoutCompat>