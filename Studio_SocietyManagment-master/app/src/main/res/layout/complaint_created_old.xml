<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#096a75">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/C_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="05dp"
            android:layout_marginTop="08dp"
            android:background="@drawable/back" />

        <TextView
            android:text="New Complaint"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#fff"
            android:paddingRight="50dp"
            android:layout_marginTop="13dp"/>

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/linearlayt1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_margin="02dp"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:typeface="serif"
                android:textColor="#096a75"
                android:textSize="12sp"
                android:editable="false"
                android:text="Request Type"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@drawable/spinner_border_color">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/C_requesttype"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:textSize="14dp"
                    android:hint="Select Request Type"
                    android:textColorHint="#757575"
                    android:paddingLeft="12dp"
                    android:paddingTop="08dp"
                    android:textColor="#3e3e3e"
                    android:background="@drawable/spinner_border_color"/>

                    <android.support.v7.widget.AppCompatImageButton
                        android:layout_width="15dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="end"
                        android:background="@drawable/down_arrow"
                        />

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/C_request_type"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@color/transparent"/>

                </FrameLayout>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:typeface="serif"
                android:textColor="#096a75"
                android:textSize="12sp"
                android:editable="false"
                android:text="Flat Location"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@drawable/spinner_border_color">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/C_location"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:hint="Select Flat Location"
                    android:textColorHint="#757575"
                    android:textSize="15dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="05dp"
                    android:textColor="#3e3e3e"
                    android:background="@drawable/spinner_border_color"/>

                <android.support.v7.widget.AppCompatImageButton
                    android:layout_width="15dp"
                    android:layout_height="10dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="end"
                    android:background="@drawable/down_arrow"
                    />

                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/C_Flat"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:background="@color/transparent"/>

            </FrameLayout>


            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:typeface="serif"
                android:textColor="#096a75"
                android:textSize="12sp"
                android:editable="false"
                android:text="Title"/>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@drawable/spinner_border_color">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/C_complaintTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textColorHint="#757575"
                    android:inputType="none"
                    android:hint="Enter Complaint Title"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:textColor="#3e3e3e"
                    android:textSize="14sp"
                    android:typeface="serif"
                    android:background="@drawable/spinner_border_color"
                    />

            </android.support.v7.widget.LinearLayoutCompat>


            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:typeface="serif"
                android:textColor="#096a75"
                android:textSize="12sp"
                android:editable="false"
                android:text="Description"/>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="40dp"
                android:orientation="horizontal"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="@drawable/spinner_border_color">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/C_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textColorHint="#757575"
                    android:inputType="none"
                    android:hint="Enter Description"
                    android:paddingLeft="12dp"
                    android:paddingTop="08dp"
                    android:paddingBottom="08dp"
                    android:paddingRight="12dp"
                    android:textColor="#3e3e3e"
                    android:textSize="14sp"
                    android:typeface="serif"
                    android:backgroundTint="@color/transparent"
                    android:background="@drawable/spinner_border_color"
                    />

            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.v7.widget.LinearLayoutCompat>



        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            >

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/C_submit"
                android:background="#096a75"
                android:textAlignment="center"
                android:paddingTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="SUBMIT"
                android:typeface="serif"
                android:textSize="15sp"
                android:textColor="#fff"
                />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.LinearLayoutCompat>