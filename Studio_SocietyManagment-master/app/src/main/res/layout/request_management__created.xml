<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f7f7f7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:typeface="serif"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#096a75"
            android:textSize="20sp"
            android:editable="false"
            android:text="New Request"/>

        <View
            android:background="#d3d3d3"
            android:layout_height="0.7dp"
            android:layout_width="fill_parent"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_marginTop="10dp">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/opensans_light"
            android:textStyle="bold"
            android:textColor="#096a75"
            android:editable="false"
            android:text="Request Type"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/spinner_border_color">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/request"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:textSize="14dp"
                app:fontFamily="@font/opensans_light"
                android:text="Select Request Type"
                android:paddingLeft="12dp"
                android:paddingTop="08dp"
                android:textColor="#3e3e3e"
                android:background="@drawable/spinner_border_color"/>

            <android.support.v7.widget.AppCompatImageButton
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="end"
                android:background="@drawable/down_arrow"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/rtype"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@color/transparent"/>

        </FrameLayout>



        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/opensans_light"
            android:textStyle="bold"
            android:textColor="#096a75"
            android:editable="false"
            android:text="Flat Location"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/spinner_border_color">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:textSize="14dp"
                app:fontFamily="@font/opensans_light"
                android:text="Select Request Type"
                android:paddingLeft="12dp"
                android:paddingTop="08dp"
                android:textColor="#3e3e3e"
                android:background="@drawable/spinner_border_color"/>

            <android.support.v7.widget.AppCompatImageButton
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="end"
                android:background="@drawable/down_arrow"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/location_type"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@color/transparent"/>

        </FrameLayout>


        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/opensans_light"
            android:textStyle="bold"
            android:textColor="#096a75"
            android:editable="false"
            android:text="Title"/>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/rtitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textColorHint="#757575"
                android:hint="Enter Request Title"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColor="#3e3e3e"
                android:layout_gravity="left"
                android:textSize="14dp"
                android:fontFamily="@font/opensans_light"
                android:background="@drawable/spinner_border_color"/>

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/opensans_light"
            android:textStyle="bold"
            android:textColor="#096a75"
            android:editable="false"
            android:text="Description"/>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:id="@+id/description"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/rdesc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textColorHint="#757575"
                android:hint="Enter Request Title"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColor="#3e3e3e"
                android:paddingTop="8dp"
                android:layout_gravity="left"
                android:textSize="14dp"
                android:fontFamily="@font/opensans_light"
                android:background="@drawable/spinner_border_color"/>

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/opensans_light"
            android:textStyle="bold"
            android:textColor="#096a75"
            android:editable="false"
            android:text="@string/fromDateTimeTitle"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/spinner_border_color">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/R_fdate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textColorHint="#757575"
                android:inputType="none"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="08dp"
                android:textColor="#3e3e3e"
                android:textSize="14sp"
                android:typeface="serif"
                android:background="@drawable/spinner_border_color"
                />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/Btn_ReqRequest"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@color/transparent"/>

        </FrameLayout>


        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/opensans_light"
            android:textStyle="bold"
            android:textColor="#096a75"
            android:editable="false"
            android:text="@string/toDateTImeTitle"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/spinner_border_color">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/R_tdate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textColorHint="#757575"
                android:inputType="none"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="08dp"
                android:textColor="#3e3e3e"
                android:textSize="14sp"
                android:typeface="serif"
                android:background="@drawable/spinner_border_color"
                />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/Btn_R_tdate"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@color/transparent"/>

        </FrameLayout>

        </android.support.v7.widget.LinearLayoutCompat>
        </ScrollView>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/submit"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="#096a75"
            android:textColor="#ffffff"
            android:layout_width="150dp"
            android:textSize="15sp"
            android:layout_marginBottom="20dp"
            android:layout_height="40dp"
            android:text="SUBMIT"
            android:gravity="center" />


    </LinearLayout>
</android.support.v7.widget.LinearLayoutCompat>