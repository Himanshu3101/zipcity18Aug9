<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.ContentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f7f7f7">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:background="@drawable/popupbackground">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp">

                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/L1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="10dp">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/title_icon"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/Ser_Req_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Title"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/opensans_bold"
                        android:textSize="14dp"
                        android:textColor="#3e3e3e"/>

                </android.support.v7.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#096a75"
                    android:layout_marginTop="10dp"
                    />

                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/L2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="10dp"
                    android:layout_alignBottom="@+id/L1">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/man_icon"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/Ser_Req_Type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Type"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/opensans_light"
                        android:textSize="12dp"
                        android:textColor="#3e3e3e"/>

                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/L3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="2dp"
                    android:layout_alignBottom="@+id/L2">

                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight=".1"
                        android:layout_marginLeft="10dp">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/hand_icon"/>

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/Ser_Req_name"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:fontFamily="@font/opensans_light"
                            android:layout_marginLeft="13dp"
                            android:textColor="#3e3e3e"
                            android:textSize="12dp" />

                    </android.support.v7.widget.LinearLayoutCompat>

                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight=".1"
                        android:gravity="start"
                        android:layout_marginLeft="20dp">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/map_icon"/>

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/Ser_Req_flat"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:text="FlatNo"
                            android:fontFamily="@font/opensans_light"
                            android:layout_marginLeft="8dp"
                            android:textColor="#3e3e3e"
                            android:textSize="12dp" />

                    </android.support.v7.widget.LinearLayoutCompat>

                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/L4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="2dp"
                    android:layout_alignBottom="@+id/L3">

                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight=".1"
                        android:layout_marginLeft="10dp">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/created_on"/>

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/Ser_req_cre_on"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Createdon"
                            android:fontFamily="@font/opensans_light"
                            android:layout_marginLeft="13dp"
                            android:textColor="#3e3e3e"
                            android:textSize="12dp" />

                    </android.support.v7.widget.LinearLayoutCompat>

                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight=".1"
                        android:gravity="start"
                        android:layout_marginLeft="20dp">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/created_by"/>

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/Ser_req_cre_by"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CreatedBy"
                            android:fontFamily="@font/opensans_light"
                            android:layout_marginLeft="8dp"
                            android:textColor="#3e3e3e"
                            android:textSize="12dp" />

                    </android.support.v7.widget.LinearLayoutCompat>

                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/L5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="2dp"
                    android:layout_alignBottom="@+id/L4">

                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight=".1"
                        android:layout_marginLeft="10dp">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/request_no"/>

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/Ser_Req_request"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Requestno"
                            android:fontFamily="@font/opensans_light"
                            android:layout_marginLeft="13dp"
                            android:textColor="#3e3e3e"
                            android:textSize="12dp" />

                    </android.support.v7.widget.LinearLayoutCompat>

                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight=".1"
                        android:gravity="start"
                        android:layout_marginLeft="15dp">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/status"/>

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/Ser_Req_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/opensans_light"
                            android:layout_marginLeft="8dp"
                            android:textColor="#3e3e3e"
                            android:textSize="12dp" />

                    </android.support.v7.widget.LinearLayoutCompat>

                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/L6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="3dp"
                    android:layout_alignBottom="@+id/L5">

                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight=".1"
                        android:layout_marginLeft="10dp">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/clock_icon"/>

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/Ser_Req_fdate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="FDate"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/opensans_light"
                            android:layout_marginLeft="13dp"
                            android:textColor="#3e3e3e"
                            android:textSize="12dp" />

                    </android.support.v7.widget.LinearLayoutCompat>

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/opensans_bold"
                        android:textColor="#096a75"
                        android:textSize="12dp" />

                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight=".1"
                        android:gravity="start"
                        android:layout_marginLeft="10dp">

                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/clock_icon"/>

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/Ser_Req_tdate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TDate"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/opensans_light"
                            android:layout_marginLeft="4dp"
                            android:textColor="#3e3e3e"
                            android:textSize="12dp" />

                    </android.support.v7.widget.LinearLayoutCompat>

                </android.support.v7.widget.LinearLayoutCompat>

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignBottom="@+id/L6">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/description_icon"/>

                    <!--<android.support.v7.widget.AppCompatTextView-->
                        <!--android:id="@+id/descripFull"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="Description"-->
                        <!--android:visibility="gone"-->
                        <!--android:maxLength="35"-->
                        <!--android:layout_marginLeft="10dp"-->
                        <!--android:fontFamily="@font/opensans_light"-->
                        <!--android:textSize="12dp"-->
                        <!--android:textColor="#3e3e3e"/>-->

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/Ser_Req_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/opensans_light"
                        android:textSize="13dp"
                        android:maxLines="2"
                        android:textColor="#3e3e3e"/>

                </android.support.v7.widget.LinearLayoutCompat>

            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/Ser_whole_btnfrRequest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="08dp"
                android:background="@color/transparent"/>

        </FrameLayout>

        <View
            android:id="@+id/div"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:visibility="visible"
            android:background="#d3d3d3"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

        <FrameLayout
            android:id="@+id/btn_frame"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:visibility="visible"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <android.support.v7.widget.AppCompatImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:background="@drawable/accept_icon"/>


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/stat_of_Req"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"
                android:typeface="serif"
                android:layout_gravity="center"
                android:editable="false"
                android:textColor="#3e3e3e" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/req_iid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"
                android:typeface="serif"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:editable="false"
                android:textColor="#3e3e3e" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/verif_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"
                android:typeface="serif"
                android:layout_gravity="center"
                android:visibility="invisible"
                android:editable="false"
                android:textColor="#3e3e3e" />


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/Ser_AcceptRequest"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"/>

        </FrameLayout>

    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.ContentFrameLayout>

