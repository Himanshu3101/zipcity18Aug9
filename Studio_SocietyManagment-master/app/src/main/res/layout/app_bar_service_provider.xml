<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#096a75 ">

        <!--<android.support.v7.widget.AppCompatImageButton-->
        <!--android:id="@+id/menu"-->
        <!--android:layout_width="23dp"-->
        <!--android:layout_height="23dp"-->
        <!--android:layout_marginRight="05dp"-->
        <!--android:layout_marginTop="07dp"-->
        <!--android:background="@drawable/menu" />-->

        <FrameLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button android:id="@+id/menu"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@color/transparent"/>

            <ImageView android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:background="@drawable/menu"
                android:layout_gravity="center"/>
        </FrameLayout>
        <TextView
            android:text="Service Provider"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:textColor="#fff"
            android:paddingRight="50dp"
            android:layout_marginTop="13dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end">

            <FrameLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".1">

                <Button android:id="@+id/Ser_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/transparent"/>

                <ImageView android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/profile"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <FrameLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".1">

                <Button android:id="@+id/Ser_notify"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/transparent"/>

                <ImageView android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="fitXY"
                    android:background="@drawable/notification"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <!--<android.support.v7.widget.AppCompatImageButton-->
            <!--android:id="@+id/Ser_profile"-->
            <!--android:layout_width="20dp"-->
            <!--android:layout_height="20dp"-->
            <!--android:layout_marginRight="20dp"-->
            <!--android:layout_marginTop="04dp"-->
            <!--android:background="@drawable/profile"/>-->


            <!--<android.support.v7.widget.AppCompatImageButton-->
            <!--android:id="@+id/Ser_notify"-->
            <!--android:layout_width="20dp"-->
            <!--android:layout_height="20dp"-->
            <!--android:layout_marginTop="04dp"-->
            <!--android:background="@drawable/notification" />-->

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <include layout="@layout/content_serviceprovider" />





</LinearLayout>