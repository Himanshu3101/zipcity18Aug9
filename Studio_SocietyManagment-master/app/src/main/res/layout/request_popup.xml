<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="280dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:background="#f7f7f7">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         android:layout_marginTop="10dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/title_icon"/>

        <TextView
            android:id="@+id/r_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/opensans_bold"
            android:textSize="14dp"
            android:textColor="#3e3e3e"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
         android:layout_marginTop="5dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/man_icon"/>

        <TextView
            android:id="@+id/r_Type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/opensans_light"
            android:textSize="13dp"
            android:textColor="#3e3e3e"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight=".1"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/created_on"/>

            <TextView
                android:id="@+id/r_on"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Createdon"
                android:fontFamily="@font/opensans_light"
                android:layout_marginLeft="13dp"
                android:textColor="#3e3e3e"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight=".1"
            android:gravity="end"
            android:layout_marginLeft="30dp">

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/created_by"/>

            <TextView
                android:id="@+id/r_by"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CreatedBy"
                android:fontFamily="@font/opensans_light"
                android:layout_marginLeft="8dp"
                android:textColor="#3e3e3e"
                android:textSize="12dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
         android:layout_marginLeft="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight=".1"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/hand_icon"/>

            <TextView
                android:id="@+id/r_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:fontFamily="@font/opensans_light"
                android:layout_marginLeft="13dp"
                android:textColor="#3e3e3e"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight=".1"
            android:gravity="end"
            android:layout_marginLeft="30dp">

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/map_icon"/>

            <TextView
                android:id="@+id/r_flat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FlatNo"
                android:fontFamily="@font/opensans_light"
                android:layout_marginLeft="8dp"
                android:textColor="#3e3e3e"
                android:textSize="12dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight=".1"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/request_no"/>

            <TextView
                android:id="@+id/r_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="requestno"
                android:fontFamily="@font/opensans_light"
                android:layout_marginLeft="13dp"
                android:textColor="#3e3e3e"
                android:textSize="11dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight=".1"
            android:gravity="end"
            android:layout_marginLeft="30dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/status"/>

            <TextView
                android:id="@+id/r_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:fontFamily="@font/opensans_light"
                android:layout_marginLeft="8dp"
                android:textColor="#3e3e3e"
                android:textSize="12dp" />

        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/L6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="2dp">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight=".1"
            android:layout_marginLeft="9dp">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/clock_icon"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/r_fdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FDate"
                  android:fontFamily="@font/opensans_light"
                android:layout_marginLeft="13dp"
                android:textColor="#3e3e3e"
                android:textSize="12dp" />

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/to"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:text="To"
             android:fontFamily="@font/opensans_bold"
            android:textColor="#096a75"
            android:textSize="12dp" />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight=".1"
            android:gravity="start"
            android:layout_marginLeft="20dp">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/clock_icon"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/r_tdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TDate"
                android:fontFamily="@font/opensans_light"
                android:layout_marginLeft="4dp"
                android:textColor="#3e3e3e"
                android:textSize="12dp" />

        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.LinearLayoutCompat>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/description_icon"/>

        <TextView
            android:id="@+id/r_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/opensans_light"
            android:textSize="12dp"
            android:textColor="#3e3e3e"/>

        <TextView
            android:id="@+id/Req_popup_uniqueCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    </LinearLayout>

    <Button
        android:id="@+id/req_closed"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#fff"
        android:layout_margin="15dp"
        android:background="#096a75"
        android:layout_gravity="center"
        android:text="Request Closed"/>

    <!--</LinearLayout>-->

</LinearLayout>