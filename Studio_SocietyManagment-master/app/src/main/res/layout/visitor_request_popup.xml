<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/popupbackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:typeface="serif"
            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#096a75"
            android:textSize="20sp"
            android:editable="false"
            android:text="New Request"/>

        <View
            android:background="#096a75"
            android:layout_height="0.7dp"
            android:layout_width="fill_parent"/>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:typeface="serif"
            android:textColor="#096a75"
            android:textSize="12sp"
            android:editable="false"
            android:text="Enter Emergency contact"/>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:focusableInTouchMode="true"
            android:background="@drawable/spinner_border_color">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/visitor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textColorHint="#757575"
                android:inputType="none"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColor="#3e3e3e"
                android:textSize="14sp"
                android:typeface="serif"
                android:background="@drawable/spinner_border_color"
                />

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:typeface="serif"
            android:textColor="#096a75"
            android:textSize="12sp"
            android:editable="false"
            android:text="Flat Location"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/spinner_border_color">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:textSize="15dp"
                android:paddingLeft="12dp"
                android:paddingTop="05dp"
                android:textColor="#3e3e3e"
                android:background="@drawable/spinner_border_color"/>

            <android.support.v7.widget.AppCompatImageButton
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="end"
                android:background="@drawable/down_arrow"
                />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/image_type"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@color/transparent"/>

        </FrameLayout>


        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:typeface="serif"
            android:textColor="#096a75"
            android:textSize="12sp"
            android:editable="false"
            android:text="From Date"/>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/spinner_border_color">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/fdate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textColorHint="#757575"
                android:inputType="none"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColor="#3e3e3e"
                android:textSize="14sp"
                android:typeface="serif"
                android:background="@drawable/spinner_border_color"
                />

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:typeface="serif"
            android:textColor="#096a75"
            android:textSize="12sp"
            android:editable="false"
            android:text="To Date"/>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:id="@+id/tdatelayout"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/spinner_border_color">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/tdate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textColorHint="#757575"
                android:inputType="none"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColor="#3e3e3e"
                android:textSize="14sp"
                android:typeface="serif"
                android:background="@drawable/spinner_border_color"
                />

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.AppCompatButton
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="#096a75"
            android:textColor="#ffffff"
            android:layout_width="150dp"
            android:textSize="15sp"
            android:layout_marginBottom="20dp"
            android:typeface="serif"
            android:layout_height="40dp"
            android:text="SUBMIT"
            android:gravity="center" />


</LinearLayout>
</android.support.v7.widget.LinearLayoutCompat>