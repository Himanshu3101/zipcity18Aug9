<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f7f7f7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:typeface="serif"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#096a75"
            android:textSize="20sp"
            android:editable="false"
            android:text="New Complaint"/>

        <View
            android:background="#d3d3d3"
            android:layout_height="0.7dp"
            android:layout_width="fill_parent"/>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/opensans_light"
            android:textStyle="bold"
            android:textColor="#096a75"
            android:editable="false"
            android:text="Complaint Type*"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/spinner_border_color">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/complaint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:textSize="12dp"
                app:fontFamily="@font/opensans_light"
                android:text="Select Complaint Type"
                android:paddingLeft="12dp"
                android:paddingTop="08dp"
                android:textColor="#3e3e3e"
                android:background="@drawable/spinner_border_color"/>

            <android.support.v7.widget.AppCompatImageButton
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="end"
                android:background="@drawable/down_arrow"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/complainttype"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@color/transparent"/>

        </FrameLayout>



        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/opensans_light"
            android:textStyle="bold"
            android:textColor="#096a75"
            android:editable="false"
            android:text="Flat Number*"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/spinner_border_color">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:textSize="12dp"
                android:fontFamily="@font/opensans_light"
                android:text="Select Flat Number"
                android:paddingLeft="12dp"
                android:paddingTop="08dp"
                android:textColor="#3e3e3e"
                android:background="@drawable/spinner_border_color"/>

            <android.support.v7.widget.AppCompatImageButton
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="end"
                android:background="@drawable/down_arrow"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/image_type"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@color/transparent"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/complaintlocation"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@color/transparent"/>

        </FrameLayout>


        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/opensans_light"
            android:textStyle="bold"
            android:textColor="#096a75"
            android:editable="false"
            android:text="Title"/>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
            android:background="@drawable/spinner_border_color">

            <EditText
                android:id="@+id/ctitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textColorHint="#757575"
                android:hint="Enter Title"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColor="#3e3e3e"
                android:layout_gravity="left"
                android:textSize="14dp"
                android:fontFamily="@font/opensans_light"
                android:background="@drawable/spinner_border_color"
                />

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/opensans_light"
            android:textStyle="bold"
            android:textColor="#096a75"
            android:editable="false"
            android:text="Description"/>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:id="@+id/description"
            android:layout_height="56dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal"
             android:background="@drawable/spinner_border_color">

            <EditText
                android:id="@+id/cdesc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textColorHint="#757575"
                android:hint="Enter Complaint Description"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColor="#3e3e3e"
                android:maxLines="3"
                android:layout_gravity="left"
                android:textSize="14dp"
                android:fontFamily="@font/opensans_light"
                android:background="@drawable/spinner_border_color"/>

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/csubmit"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="#096a75"
            android:textColor="#ffffff"
            android:layout_width="150dp"
            android:textSize="15sp"
            android:layout_marginBottom="20dp"
            android:layout_height="40dp"
            android:text="SUBMIT"
            android:gravity="center" />


    </LinearLayout>
</android.support.v7.widget.LinearLayoutCompat>