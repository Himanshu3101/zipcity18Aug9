<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/popupbackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:typeface="serif"
            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#096a75"
            android:textSize="20sp"
            android:editable="false"
            android:text="New Visitor Request"/>

        <View
            android:background="#d3d3d3"
            android:layout_height="0.7dp"
            android:layout_width="fill_parent"/>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="360dp"
       android:layout_marginTop="10dp">

       <android.support.v7.widget.LinearLayoutCompat
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <android.support.v7.widget.AppCompatTextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="15dp"
               android:layout_marginTop="20dp"
               android:fontFamily="@font/opensans_light"
               android:textStyle="bold"
               android:textColor="#096a75"
               android:editable="false"
               android:text="Visitor Type*"/>

           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="36dp"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:layout_marginTop="10dp"
               android:focusable="true"
               android:focusableInTouchMode="true"
               android:background="@drawable/spinner_border_color">

               <android.support.v7.widget.AppCompatTextView
                   android:id="@+id/NvisitorR"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_gravity="left"
                   android:textSize="15dp"
                   android:paddingLeft="12dp"
                   android:paddingTop="05dp"
                   android:hint="Select"
                   android:textColorHint="#CCCCCC"
                   android:textColor="#3e3e3e"
                   android:background="@drawable/spinner_border_color"/>

               <android.support.v7.widget.AppCompatImageView
                   android:layout_width="15dp"
                   android:layout_height="10dp"
                   android:layout_marginTop="12dp"
                   android:layout_marginRight="10dp"
                   android:layout_gravity="end"
                   android:background="@drawable/down_arrow"/>

               <android.support.v7.widget.AppCompatButton
                   android:id="@+id/Nvisitor_type"
                   android:layout_width="match_parent"
                   android:layout_height="36dp"
                   android:background="@color/transparent"/>

           </FrameLayout>


           <android.support.v7.widget.AppCompatTextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="15dp"
               android:layout_marginTop="20dp"
               android:fontFamily="@font/opensans_light"
               android:textStyle="bold"
               android:textColor="#096a75"
               android:editable="false"
               android:text="Flat Number*"/>

           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="36dp"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:layout_marginTop="10dp"
               android:focusable="true"
               android:focusableInTouchMode="true"
               android:background="@drawable/spinner_border_color">

               <android.support.v7.widget.AppCompatTextView
                   android:id="@+id/N_Flat_location"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_gravity="left"
                   android:hint="Select"
                   android:textColorHint="#CCCCCC"
                   android:textSize="15dp"
                   android:paddingLeft="12dp"
                   android:paddingTop="05dp"
                   android:textColor="#3e3e3e"
                   />

               <android.support.v7.widget.AppCompatImageView
                   android:layout_width="15dp"
                   android:layout_height="10dp"
                   android:layout_marginTop="12dp"
                   android:layout_marginRight="10dp"
                   android:layout_gravity="end"
                   android:background="@drawable/down_arrow"/>

               <android.support.v7.widget.AppCompatButton
                   android:id="@+id/BtnN_Flat_location"
                   android:layout_width="match_parent"
                   android:layout_height="36dp"
                   android:background="@color/transparent"/>

           </FrameLayout>

           <android.support.v7.widget.AppCompatTextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="15dp"
               android:layout_marginTop="20dp"
               android:fontFamily="@font/opensans_light"
               android:textStyle="bold"
               android:textColor="#096a75"
               android:editable="false"
               android:text="Enter Visitor Name*"/>

           <android.support.v7.widget.LinearLayoutCompat
               android:layout_width="match_parent"
               android:layout_height="36dp"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:orientation="horizontal"
               android:focusable="true"
               android:focusableInTouchMode="true"
               android:background="@drawable/spinner_border_color">

               <EditText
                   android:id="@+id/N_Name"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_gravity="left"
                   android:textSize="15dp"
                   android:paddingLeft="12dp"
                   android:paddingTop="05dp"
                   android:textColor="#3e3e3e"
                   android:background="@color/transparent"/>

           </android.support.v7.widget.LinearLayoutCompat>
           <android.support.v7.widget.AppCompatTextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="15dp"
               android:layout_marginTop="20dp"
               android:fontFamily="@font/opensans_light"
               android:textStyle="bold"
               android:textColor="#096a75"
               android:editable="false"
               android:text="Enter Visitor Number*"/>

           <android.support.v7.widget.LinearLayoutCompat
               android:layout_width="match_parent"
               android:layout_height="36dp"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:orientation="horizontal"
               android:focusable="true"
               android:focusableInTouchMode="true">

               <EditText
                   android:id="@+id/N_Enter_number"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:textCursorDrawable="@drawable/color_cursor"
                   android:textColorHint="#757575"
                   android:inputType="number"
                   android:paddingLeft="12dp"
                   android:paddingRight="12dp"
                   android:textColor="#3e3e3e"
                   android:maxLength="12"
                   android:textSize="14sp"
                   android:typeface="serif"
                   android:background="@drawable/spinner_border_color"
                   />

           </android.support.v7.widget.LinearLayoutCompat>

           <android.support.v7.widget.AppCompatTextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="15dp"
               android:layout_marginTop="20dp"
               android:fontFamily="@font/opensans_light"
               android:textStyle="bold"
               android:textColor="#096a75"
               android:editable="false"
               android:text="Enter VIsitor Address"/>

           <android.support.v7.widget.LinearLayoutCompat
               android:layout_width="match_parent"
               android:layout_height="36dp"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:orientation="horizontal"
               android:focusable="true"
               android:focusableInTouchMode="true">

               <EditText
                   android:id="@+id/N_address"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:textCursorDrawable="@drawable/color_cursor"
                   android:textColorHint="#757575"
                   android:inputType="none"
                   android:paddingLeft="12dp"
                   android:paddingRight="12dp"
                   android:textColor="#3e3e3e"
                   android:textSize="14sp"
                   android:typeface="serif"
                   android:background="@drawable/spinner_border_color"
                   />

           </android.support.v7.widget.LinearLayoutCompat>

           <android.support.v7.widget.AppCompatTextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="15dp"
               android:layout_marginTop="20dp"
               android:fontFamily="@font/opensans_light"
               android:textStyle="bold"
               android:textColor="#096a75"
               android:editable="false"
               android:text="@string/fromDateTimeTitle"/>

           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="36dp"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:orientation="horizontal"
               android:focusable="true"
               android:focusableInTouchMode="true"
               android:background="@drawable/spinner_border_color">

               <android.support.v7.widget.AppCompatTextView
                   android:id="@+id/N_fdate"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:textCursorDrawable="@drawable/color_cursor"
                   android:textColorHint="#757575"
                   android:inputType="none"
                   android:paddingLeft="12dp"
                   android:paddingRight="12dp"
                   android:paddingTop="08dp"
                   android:textColor="#3e3e3e"
                   android:textSize="14sp"
                   android:typeface="serif"
                   android:background="@drawable/spinner_border_color"
                   />

               <android.support.v7.widget.AppCompatButton
                   android:id="@+id/Btn_NewVisiter"
                   android:layout_width="match_parent"
                   android:layout_height="36dp"
                   android:background="@color/transparent"/>

           </FrameLayout>


           <android.support.v7.widget.AppCompatTextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="15dp"
               android:layout_marginTop="20dp"
               android:fontFamily="@font/opensans_light"
               android:textStyle="bold"
               android:textColor="#096a75"
               android:editable="false"
               android:text="@string/toDateTImeTitle"/>

           <FrameLayout
               android:layout_width="match_parent"
               android:layout_height="36dp"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:layout_marginBottom="10dp"
               android:orientation="horizontal"
               android:focusable="true"
               android:focusableInTouchMode="true"
               android:background="@drawable/spinner_border_color">

               <android.support.v7.widget.AppCompatTextView
                   android:id="@+id/N_tdate"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:textCursorDrawable="@drawable/color_cursor"
                   android:textColorHint="#757575"
                   android:inputType="none"
                   android:paddingLeft="12dp"
                   android:paddingRight="12dp"
                   android:paddingTop="08dp"
                   android:textColor="#3e3e3e"
                   android:textSize="14sp"
                   android:typeface="serif"
                   android:background="@drawable/spinner_border_color"
                   />

               <android.support.v7.widget.AppCompatButton
                   android:id="@+id/Btn_N_tdate"
                   android:layout_width="match_parent"
                   android:layout_height="36dp"
                   android:background="@color/transparent"/>

           </FrameLayout>


       </android.support.v7.widget.LinearLayoutCompat>
   </ScrollView>

        <RelativeLayout
            android:id="@+id/footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/New_submit"
                android:background="#096a75"
                android:textAlignment="center"
                android:paddingTop="8dp"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="SUBMIT"
                android:typeface="serif"
                android:textSize="15sp"
                android:textColor="#fff" />

        </RelativeLayout>

   </LinearLayout>
</android.support.v7.widget.LinearLayoutCompat>