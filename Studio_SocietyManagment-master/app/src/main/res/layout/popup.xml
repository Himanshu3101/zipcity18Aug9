<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/popupbackground"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/titleofrespo"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:typeface="serif"
            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="#096a75"
            android:textSize="20sp"
            android:editable="false"
            />

        <View
            android:background="#096a75"
            android:layout_height="0.5dp"
            android:layout_width="fill_parent"/>


        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:typeface="serif"
            android:textColor="#096a75"
            android:textSize="12sp"
            android:editable="false"
            android:text="Created On"/>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="@drawable/spinner_border_color">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/createdon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textColorHint="#757575"
                android:maxLines="1"
                android:paddingLeft="12dp"
                android:paddingTop="7dp"
                android:paddingRight="12dp"
                android:textColor="#3e3e3e"
                android:textSize="14sp"
                android:typeface="serif"
                android:editable="false"
                android:background="@drawable/spinner_border_color"
                />

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:typeface="serif"
            android:textColor="#096a75"
            android:textSize="12sp"
            android:editable="false"
            android:text="Description"/>

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="@drawable/spinner_border_color">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textColorHint="#757575"
                android:paddingLeft="12dp"
                android:paddingTop="7dp"
                android:paddingRight="12dp"
                android:textColor="#3e3e3e"
                android:textSize="14sp"
                android:typeface="serif"
                android:editable="false"
                android:background="@drawable/spinner_border_color"
                />

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/closedView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:typeface="serif"
            android:textColor="#096a75"
            android:textSize="12sp"
            android:visibility="gone"
            android:editable="false"
            android:text="Close Code"/>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/closed_ID"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textColorHint="#757575"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="#3e3e3e"
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:typeface="serif"
            android:hint="Enter Code for Request Closed"
            android:background="@drawable/spinner_border_color"
            />

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/accept"
                android:layout_marginTop="20dp"
                android:background="#096a75"
                android:textColor="#ffffff"
                android:layout_width="100dp"
                android:textSize="15sp"
                android:paddingTop="7dp"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:typeface="serif"
                android:layout_height="40dp"
                android:text="Accepted"
                android:visibility="gone"/>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/cancel"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:background="#096a75"
                android:textColor="#ffffff"
                android:layout_width="100dp"
                android:textSize="15sp"
                android:paddingTop="7dp"
                android:textAlignment="center"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                android:typeface="serif"
                android:layout_height="40dp"
                android:text="Closed" />


        </android.support.v7.widget.LinearLayoutCompat>
    </LinearLayout>
</android.support.v7.widget.LinearLayoutCompat>