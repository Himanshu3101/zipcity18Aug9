<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.ContentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <android.support.v7.widget.LinearLayoutCompat
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginTop="5dp"
      android:layout_marginBottom="5dp"
      android:layout_marginLeft="7dp"
      android:layout_marginRight="7dp">

      <android.support.v7.widget.AppCompatTextView
          android:id="@+id/title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="need"
          android:textColor="#096a75"
          android:textStyle="bold"
          android:textSize="18dp" />

      <View
          android:layout_height="2dp"
          android:layout_width="match_parent"
          android:background="#096a75"/>


      <android.support.v7.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="8dp"
          android:layout_marginLeft="8dp">

          <android.support.v7.widget.AppCompatImageView
              android:layout_width="13dp"
              android:layout_height="13dp"
              android:layout_marginTop="5dp"
              android:background="@drawable/calender_icon"/>

          <android.support.v7.widget.AppCompatTextView
              android:id="@+id/createdOn"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="calender"
              android:layout_marginLeft="10dp"
              android:textColor="#3e3e3e"
              android:typeface="serif"
              android:textSize="13dp"/>
      </android.support.v7.widget.LinearLayoutCompat>

      <android.support.v7.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="5dp"
          android:layout_marginLeft="8dp">

          <android.support.v7.widget.AppCompatImageView
              android:layout_width="15dp"
              android:layout_height="18dp"
              android:layout_marginTop="5dp"
              android:background="@drawable/man_icon"/>

          <android.support.v7.widget.AppCompatTextView
              android:id="@+id/description"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="maths teacher"
              android:layout_marginLeft="10dp"
              android:textColor="#3e3e3e"
              android:typeface="serif"
              android:textSize="13dp"/>
      </android.support.v7.widget.LinearLayoutCompat>

      <android.support.v7.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="5dp"
          android:layout_marginLeft="8dp">

          <android.support.v7.widget.AppCompatImageView
              android:layout_width="13dp"
              android:layout_height="13dp"
              android:layout_marginTop="5dp"
              android:background="@drawable/map_icon"/>

          <android.support.v7.widget.AppCompatTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="flat location: "
              android:layout_marginLeft="10dp"
              android:textColor="#3e3e3e"
              android:typeface="serif"
              android:textSize="14dp"/>

          <android.support.v7.widget.AppCompatTextView
              android:id="@+id/UnitNo"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="1/A-001"
              android:layout_marginLeft="10dp"
              android:textColor="#3e3e3e"
              android:typeface="serif"
              android:textSize="13dp"/>

      </android.support.v7.widget.LinearLayoutCompat>

      <android.support.v7.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="5dp"
          android:layout_marginLeft="8dp">

          <android.support.v7.widget.AppCompatImageView
              android:layout_width="13dp"
              android:layout_height="13dp"
              android:layout_marginTop="5dp"
              android:background="@drawable/hand_icon"/>

          <android.support.v7.widget.AppCompatTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Assigned To: "
              android:layout_marginLeft="10dp"
              android:textColor="#3e3e3e"
              android:typeface="serif"
              android:textSize="14dp"/>


          <android.support.v7.widget.AppCompatTextView
              android:id="@+id/assignedTo"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="1/A-001"
              android:layout_marginLeft="10dp"
              android:textColor="#3e3e3e"
              android:typeface="serif"
              android:textSize="13dp"/>

      </android.support.v7.widget.LinearLayoutCompat>

      <android.support.v7.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="5dp"
          android:layout_marginLeft="8dp">

          <android.support.v7.widget.AppCompatImageView
              android:layout_width="13dp"
              android:layout_height="13dp"
              android:layout_marginTop="5dp"
              android:background="@drawable/battery_icon"/>

          <android.support.v7.widget.AppCompatTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Status  :"
              android:layout_marginLeft="10dp"
              android:textColor="#3e3e3e"
              android:typeface="serif"
              android:textSize="13dp"/>

          <android.support.v7.widget.AppCompatTextView
              android:id="@+id/status"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Created"
              android:layout_marginLeft="10dp"
              android:textColor="#3e3e3e"
              android:typeface="serif"
              android:textSize="13dp"/>

      </android.support.v7.widget.LinearLayoutCompat>

      <android.support.v7.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="5dp"
          android:paddingBottom="20dp"
          android:layout_marginLeft="8dp">

          <android.support.v7.widget.AppCompatImageView
              android:layout_width="13dp"
              android:layout_height="13dp"
              android:layout_marginTop="5dp"
              android:background="@drawable/type_icon"/>

          <android.support.v7.widget.AppCompatTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Type  :"
              android:layout_marginLeft="10dp"
              android:textColor="#3e3e3e"
              android:typeface="serif"
              android:textSize="13dp"/>

          <android.support.v7.widget.AppCompatTextView
              android:id="@+id/type"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Tutor"
              android:layout_marginLeft="10dp"
              android:textColor="#3e3e3e"
              android:typeface="serif"
              android:textSize="13dp"/>

          <android.support.v7.widget.AppCompatTextView
              android:id="@+id/requestIDD"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Tutor"
              android:layout_marginLeft="10dp"
              android:visibility="gone"
              android:textColor="#3e3e3e"
              android:typeface="serif"
              android:textSize="13dp"/>

          <android.support.v7.widget.AppCompatTextView
              android:id="@+id/cancelldIDD"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Tutor"
              android:layout_marginLeft="10dp"
              android:visibility="gone"
              android:textColor="#3e3e3e"
              android:typeface="serif"
              android:textSize="13dp"/>


      </android.support.v7.widget.LinearLayoutCompat>

      <!--<View-->
          <!--android:layout_height="0.5dp"-->
          <!--android:layout_width="match_parent"-->
          <!--android:background="#992828" />-->

  </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnfrRequestShow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="08dp"
        android:background="@color/transparent"/>

</android.support.v7.widget.ContentFrameLayout>

