<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#096a75">

        <android.support.v7.widget.AppCompatImageButton
            android:id="@+id/Society_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="05dp"
            android:layout_marginTop="07dp"
            android:background="@drawable/back" />

        <TextView
            android:text="Basic Info"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#fff"
            android:paddingRight="50dp"
            android:layout_marginTop="13dp"/>

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.AppCompatTextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="20dp"
    android:typeface="serif"
    android:textColor="#096a75"
    android:textSize="12sp"
    android:editable="false"
    android:text="Society Code" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/spinner_border_color">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/S_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textColorHint="#757575"
            android:imeOptions="actionGo"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="#3e3e3e"
            android:textSize="14sp"
            android:typeface="serif"
            android:background="@drawable/spinner_border_color"
            android:editable="false"
            />

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:typeface="serif"
        android:textColor="#096a75"
        android:textSize="12sp"
        android:editable="false"
        android:text="Society Name" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/spinner_border_color">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/S_Name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textColorHint="#757575"
            android:imeOptions="actionGo"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="#3e3e3e"
            android:textSize="14sp"
            android:typeface="serif"
            android:background="@drawable/spinner_border_color"
            android:editable="false"
            />

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:typeface="serif"
        android:textColor="#096a75"
        android:textSize="12sp"
        android:editable="false"
        android:text="Contact Person" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/spinner_border_color">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/contact_person"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textColorHint="#757575"
            android:imeOptions="actionGo"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="#3e3e3e"
            android:textSize="14sp"
            android:typeface="serif"
            android:background="@drawable/spinner_border_color"
            android:editable="false"
            />

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:typeface="serif"
        android:textColor="#096a75"
        android:textSize="12sp"
        android:editable="false"
        android:text="Contact Number" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/spinner_border_color">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/contact_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textColorHint="#757575"
            android:imeOptions="actionGo"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="#3e3e3e"
            android:textSize="14sp"
            android:typeface="serif"
            android:background="@drawable/spinner_border_color"
            android:editable="false"
            />

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:typeface="serif"
        android:textColor="#096a75"
        android:textSize="12sp"
        android:editable="false"
        android:text="Address" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/spinner_border_color">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textColorHint="#757575"
            android:imeOptions="actionGo"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textColor="#3e3e3e"
            android:textSize="14sp"
            android:typeface="serif"
            android:background="@drawable/spinner_border_color"
            android:editable="false"
            />

    </android.support.v7.widget.LinearLayoutCompat>

</LinearLayout>