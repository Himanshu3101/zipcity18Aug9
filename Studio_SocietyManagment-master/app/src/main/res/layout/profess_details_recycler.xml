<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="05dp"
        android:background="@drawable/popupbackground">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/prof_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdfga"
            android:textSize="15sp"
            android:fontFamily="@font/opensans_bold"
            android:textStyle="bold"
            android:textColor="#096a75"
            android:inputType="textCapSentences"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#096a75"
            android:layout_marginTop="8dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight=".1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/created_by"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/proff_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="flatno"
                        android:fontFamily="@font/opensans_bold"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="1dp"
                        android:textColor="#3e3e3e"
                        android:textSize="14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/map_icon"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/proff_locat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="flatno"
                        android:fontFamily="@font/opensans_light"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="1dp"
                        android:textColor="#3e3e3e"
                        android:textSize="13sp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight=".3">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/call_by_profession"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"/>

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="fitXY"
                        android:background="@drawable/calling"
                        android:layout_gravity="center"/>

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/Member_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />



                </FrameLayout>

            </LinearLayout>

        </LinearLayout>.

    </LinearLayout>

</FrameLayout>