<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

           <android.support.v7.widget.Toolbar
              android:layout_width="match_parent"
              android:layout_height="55dp"
              android:background="#992828">

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/flat_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="05dp"
                android:layout_marginTop="07dp"
              android:background="@drawable/back" />

            <android.support.v7.widget.AppCompatTextView
                android:text="Flat Info"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#fff"
                android:paddingRight="50dp"
                android:layout_marginTop="13dp"/>

           </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="15dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/bhk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:paddingBottom="10dp"
                        android:text="1 BHK"
                        android:textColor="#992828"
                        android:typeface="serif"
                        android:textSize="20dp" />

                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end">

                        <android.support.v7.widget.AppCompatImageButton
                            android:id="@+id/OneBhkArr"
                            android:layout_width="20dp"
                            android:layout_height="13dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/arrowdown" />
                    </android.support.v7.widget.LinearLayoutCompat>

                </android.support.v7.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#D3D3D3" />

                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/l1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/onebhk"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:scrollbars="vertical"
                        android:background="@drawable/requestbackground"/>

                </android.support.v7.widget.LinearLayoutCompat>

            </android.support.v7.widget.LinearLayoutCompat>


            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="15dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/structure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:paddingBottom="10dp"
                        android:text="2 BHK"
                        android:textColor="#992828"
                        android:typeface="serif"
                        android:textSize="20dp" />

                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end">

                        <android.support.v7.widget.AppCompatImageButton
                            android:id="@+id/TwoBhkArr"
                            android:layout_width="20dp"
                            android:layout_height="13dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/arrowdown"/>
                    </android.support.v7.widget.LinearLayoutCompat>

                </android.support.v7.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#D3D3D3" />

                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/l2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <android.support.v7.widget.RecyclerView
                        android:background="@drawable/requestbackground"
                        android:id="@+id/twobhk"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:scrollbars="vertical"/>

                </android.support.v7.widget.LinearLayoutCompat>


            </android.support.v7.widget.LinearLayoutCompat>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="15dp">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/bhkthree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:paddingBottom="10dp"
                        android:text="3 BHK"
                        android:textColor="#992828"
                        android:typeface="serif"
                        android:textSize="20dp" />

                    <android.support.v7.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end">

                        <android.support.v7.widget.AppCompatImageButton
                            android:id="@+id/ThreeBhkArr"
                            android:layout_width="20dp"
                            android:layout_height="13dp"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/arrowdown"/>
                    </android.support.v7.widget.LinearLayoutCompat>

                </android.support.v7.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="#D3D3D3" />

                <android.support.v7.widget.LinearLayoutCompat
                    android:id="@+id/l3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:visibility="visible">

                    <android.support.v7.widget.RecyclerView
                        android:background="@drawable/requestbackground"
                        android:id="@+id/threebhk"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:scrollbars="vertical"/>

                </android.support.v7.widget.LinearLayoutCompat>



            </android.support.v7.widget.LinearLayoutCompat>

        </android.support.v7.widget.LinearLayoutCompat>
    </ScrollView>





